<Window x:Class="Practica1para.ClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica1para"
        mc:Ignorable="d"
        Title="ClientsWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Margin="0,0,0,-6">
        <DataGrid CanUserAddRows="False" x:Name="ClientsDgr" SelectionChanged="ClientsDgr_SelectionChanged"/>
        <TextBlock x:Name="ClientsTbx"/>
        <Button Content="Добавить" Click="Button_Click"/>
        <Button Content="Изменить" Click="Button_Click_1"/>
        <Button Content="Удалить" Click="Button_Click_2"/>
    </StackPanel>
</Window>
